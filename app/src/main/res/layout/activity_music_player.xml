<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicPlayerActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="777dp"
        tools:layout_editor_absoluteY="363dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btxml_bottom_Bar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:background="#00ff0000"
                app:srcCompat="@drawable/bt_bottom_bar1" />
            <ImageButton
                android:id="@+id/btxml_bottom_Bar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#00ff0000"
                app:srcCompat="@drawable/bt_bottom_bar2" />
            <ImageButton
                android:id="@+id/btxml_bottom_Bar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#00ff0000"
                app:srcCompat="@drawable/bt_bottom_bar2" />
            <ImageButton
                android:id="@+id/btxml_bottom_Bar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#00ff0000"
                app:srcCompat="@drawable/bt_bottom_bar3" />


        </LinearLayout>


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>